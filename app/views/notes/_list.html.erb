<ul class="list">
<% notes.each do |note| %>
  <li>
    <div><a class="title" href="<%= note_path(note.id) %>"><%= truncate(note.title, :length => 50) %></a> <%= raw '<span class="label warning">公开</span>' if note.is_public? %></div>
    <div class="info">
      <%= note.word_count %> <%= t("notes.chars") %>, 由 <%= user_name_tag(note.user) %><%= raw t("notes.created_at", :time => timeago(note.created_at)) %> , <%= note.changes_count %> <%= t("notes.times_edit") %>
    </div>
  </li>
<% end %>
</ul>
