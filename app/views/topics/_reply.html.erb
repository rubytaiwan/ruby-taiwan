<div class="reply" id="reply<%= i + 1 %>">
  <div class="pull-left face"><%= user_avatar_tag(item.user, :normal) %></div>
  <div class="infos">
    <div class="info clearfix">
      <span class="name"><%= user_name_tag(item.user) %></span>
      <span class="time"><%= i + 1 %><%= t("common.floor")%>, <%= t("common.reply_at")%> <%= timeago(item.created_at) %>
        <% if owner?(item) %>
            <%= link_to(t("common.edit"), edit_reply_path(item))%>
        <% end %>
        <%= link_to("", "#",
            :onclick => "return Topics.reply(#{i+1},'#{item.user.login}' );", 
            :title => t("topics.reply_this_floor"), :class => "icon small_reply" )

        %>
      </span>
    </div>
    <div class="body">
      <%= format_topic_body(item.body, :mentioned_user_logins => item.mentioned_user_logins) %>
    </div>
  </div>
</div>
