<%= form_for([:cpanel,@topic]) do |f| %>
<fieldset>
  <legend></legend>
  <%= render 'shared/error_messages', :target => @topic %>

  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
    <%= f.text_field :title, :class => "span10" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :node_id %>
    <div class="input">
    <%= f.select :node_id, Node.all.collect { |n| [n.name,n.id] } %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :body %>
    <div class="input">
    <%= f.text_area :body, :class => "span13", :style => "height:400px" %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :user_id %>
    <div class="input">
    <%= f.text_field :user_id %> <%= @topic.user.login if @topic.user %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :source %>
    <div class="input">
    <%= f.text_field :source %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit t("common.save"), :class => "btn primary", :disable_with => t("common.saving") %>
    or
    <%= link_to 'Back', cpanel_topics_path %>
  </div>
<% end %>
