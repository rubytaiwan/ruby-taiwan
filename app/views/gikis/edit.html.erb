<%= content_for :scripts do %>
  <%= javascript_include_tag "topics" %>
<% end %>

<div class="box">
    <%= simple_form_for :wiki, :url => giki_path(@wiki.name), :wrapper => :inline, :html => { :method => :put }  do |f| -%>
        <fieldset>
        <%= f.input :name , :hint => "http://#{Setting.domain}/wiki/:slug"%>  

        
        <div class="edit_tools input">
            <div class="editor_toolbar">
              <ul class="pills">
                <li class="edit active"><%= link_to(t("common.editor_toolbar_edit"), "#") %></li>
                <li class="preview"><%= link_to(t("common.editor_toolbar_preview"), "#") %></li>
              </ul>
            </div>
          
        </div>
        
        <%= f.input :raw_data, :as => :text,
                       :input_html => { :class => "topic_editor wiki long", :rows => "30" },
                       :hint => "請使用 Markdown 格式編寫,可以試試用 <a href='http://mouapp.com' target='_blank'>Mou</a> 這個 App 来編寫。".html_safe
        %>
        
        <%= f.input :change_desc , :as => :text,
                      :input_html => { :class => "long", :rows => "2" },
                      :hint => t("pages.describe_this_time_change")
        %>
        </fieldset>
        <div class="actions">
               <%= f.submit t("common.save"), :class => "btn primary" %>
        </div>
    <% end %>
</div>