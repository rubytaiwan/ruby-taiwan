<%= content_for :styles do %>
  <%= stylesheet_link_tag "pages" %>
<% end %>
<%= content_for :scripts do %>
  <%= javascript_include_tag "pages" %>
<% end %>

<div id="pages">
    <div class="tools">
        <%= link_to(t("pages.create_page"), new_giki_path, :class => "btn primary")%>
    </div>
    <div class="box">
        <%= render_table(@wiki.versions, [
          [ "Name",         lambda { |version| version.author }],   
          [ "Commit",       lambda { |version| version.id[0..6] }],
          [ "Message",      lambda { |version| version.message }],
        ], {:class_name => "table"}) %>
    </div>
    
</div>
